{
    "manifest_version": 3,
    "name": "ChatSplat",
    "version": "1.0",
    "description": "Convert ChatGPT conversations to Markdown",
    "icons": {
        "128": "icons/icon128.png"
    },    
    "content_scripts": [
        {
          "matches": ["http://*/*", "https://*/*"],
          "js": ["content.js"]
        }
    ],
    "permissions": ["activeTab"],
    "action": {
        "default_popup": "popup.html"
    }
}